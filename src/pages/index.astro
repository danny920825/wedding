---
import Layout from '../layouts/Layout.astro';
import '@fontsource-variable/dancing-script';
---

<Layout title="Nos Casamos!">
	<!-- <img src="/images/fondo.png" alt="imagen de fondo" class="fixed -z-10 top-0 left-0 bottom-0 right-0 w-full min-h-screen object-cover overflow-hidden"> -->
	<main class="absolute bg-transparent z-10 w-full min-h-screen pt-10 overflow-hidden">
		<img src="/images/adorno.svg" class="w-72 mx-auto mb-6" />
		<h1 class="text-gold-gradient text-4xl font-bold text-handwriting text-center mb-6">Nuestra Boda</h1>
		<h2 class="text-gold-gradient text-sm font-bold text-center font-serif">Invitaci√≥n a nuestro Enlace Matrimonial</h2>
		<div class="w-full md:w-1/3 md:mx-auto flex flex-col gap-y-10 pt-10 items-center mb-6">
			<img src="/images/linea horizontal.png" alt="linea horizontal" class="w-1/3 mx-4">
			<div class="">
				<h2 class="text-gold-gradient text-4xl font-extrabold tracking-wider text-handwriting text-center">Danny</h2>
				<h3 class="text-gold-gradient text-lg font-bold text-center font-serif">y</h3>
				<h2 class="text-gold-gradient text-4xl font-extrabold tracking-wider text-handwriting text-center">Estefania</h2>
			</div>
			<img src="/images/linea horizontal.png" alt="linea horizontal" class="w-1/3 mx-4">
		</div>
		<div class="flex flex-col justify-center mb-6">
			<span class="text-gold-gradient text-md font-bold text-center font-serif">10 de Agosto</span>
			<!-- <img src="/images/linea horizontal.png" alt="linea horizontal" class="w-1/3 mx-auto h-2"> -->
			<span class="text-gold-gradient text-md font-bold text-center font-serif">02:30 pm</span>
		</div>
		<div class="w-1/3 h-[3px] bg-gold-gradient mx-auto my-3"/>
		<a class="flex flex-col justify-center mb-6 cursor-pointer" href="https://maps.app.goo.gl/LjqSt7UJTnZ92Qso6" target="_blank" referrerpolicy="no-referrer">
			<span class="text-gold-gradient text-md font-bold text-center font-serif">Palacio de Matrimonios de Prado</span>
			<span class="text-gold-gradient text-md font-bold text-center font-serif">Prado e/ Animas y Virtudes</span>
		</a>
		<h2 class="text-gold-gradient text-2xl font-extrabold tracking-wider text-handwriting text-center">Solo ceremonia nupcial</h2>
	</main>
</Layout>

<style>
	
	.text-gold-gradient {
		@apply bg-clip-text text-transparent bg-gold-gradient;
	}

	.text-handwriting {
  font-family: 'Dancing Script Variable', cursive;
}
</style>

